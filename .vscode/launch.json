{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "🛠️ gdb: デバッグ実行",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.out",
      "args": [],
